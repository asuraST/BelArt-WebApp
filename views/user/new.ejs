<%- include('../partials/header.ejs') %>
<div class="form-center">
    <form class="form-horizontal align-items-center" action="/users" method ="Post">

        <div class="form-group">
            <label class="control-label col-sm-2">First Name:</label>
            <div class="col-sm-5">
              <input type="text"  name="firstName" class = "fixed-width" required>
            </div>
          </div>

          <div class="form-group">
            <label class="control-label col-sm-2">Last Name:</label>
            <div class="col-sm-5">
              <input type="text"  name="lastName" class = "fixed-width" required>
            </div>
        </div>

        <div class="form-group">
          <label class="control-label col-sm-2">Email:</label>
          <div class="col-sm-5">
            <input type="email" id="email" name="email" class = "fixed-width" required>
          </div>
      </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Password:</label>
                <div class="col-sm-5">
                  <input type="password" id="password"  name="password" class = "fixed-width" minlength="8" maxlength="64" required>
                </div>
              </div>
          
          <br>
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="button3" >Create Account</button>
            </div>
    </form>
</div>

<%- include('../partials/footer.ejs') %>