<%- include('../partials/header.ejs')%>
<form class="form-horizontal align-items-center" method="POST" action="/trades/<%= art._id%>?_method=PUT">
  <div class="form_left_about">
    <div class="form-group">
      <label class="control-label col-sm-2">Art Category</label>
      <div class="col-sm-5">
        <input type="text" class="form-control" name="artstyle" value="<%= art.artstyle %>" required>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2">Title</label>
      <div class="col-sm-5">
        <input type="text" class="form-control" name="name" value="<%= art.name %>" required>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2">Created on</label>
      <div class="col-sm-5">
        <input type="text" id="createdon" name="createdon" value="<%= art.createdon %>" placeholder= "MM/DD/YYYY"  required >
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2">Artist</label>
      <div class="col-sm-5">
        <input type="text" class="form-control" name="artist" value="<%= art.artist %>" required>
      </div>
    </div>
  </div>
  <div class="form_center_about"> 
    <div class="form-group">
      <label class="control-label col-sm-2">Image URL</label>
      <div class="col-sm-3">
        <input type="text" class="form-control" name="image" value="<%= art.image %>" required>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2">Details</label>
      <div class="col-sm-5">
        <textarea class="form-control" rows="8" cols="50" name="details" required minlength="10"><%= art.details %></textarea>
      </div>
    </div>
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="button2">Update</button>
    </div> 
  </div>
</form>


<%- include('../partials/footer.ejs')%>