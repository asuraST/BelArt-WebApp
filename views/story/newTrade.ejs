<%- include('../partials/header.ejs') %>
  <form class="form-horizontal align-items-center" action="/trades" method ="Post">
    <div class="form_left_about">
      <div class="form-group">
        <label class="control-label col-sm-2">Art Category</label>
        <div class="col-sm-5">
          <input type="text" name="artstyle" required>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2">Title</label>
        <div class="col-sm-5">
          <input type="text" name="name" required>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2">Created on</label>
        <div class="col-sm-5">
          <input type="text" name="createdon" placeholder= "MM/DD/YYYY"  required>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2">Artist</label>
        <div class="col-sm-5">
          <input type="text" name="artist" required>
        </div>
      </div>
    </div>
    <div class="form_center_about"> 
      <div class="form-group">
        <label class="control-label col-sm-2">Image URL</label>
        <div class="col-sm-5">
          <input type="text" name="image" required>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2">Details</label>
        <div class="col-sm-5">
          <textarea name = "details" rows="8" cols="50" required minlength="10"></textarea>
        </div>
      </div>
      
      <p><input type ="checkbox" name="terms" required> I Agree to the <u>Terms and Conditions </u></p>

      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="button2">Create Trade</button>
      </div>
    </div>
  </form>
<%- include('../partials/footer.ejs') %>